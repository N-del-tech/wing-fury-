using UnityEngine;

public class UpDownMovement : MonoBehaviour
{
    public float jumpforce = 5f; // how much force is applied when jumping 
    private Rigidbody2D rb;

    void start()
    {
        rb = Getcomponent<Rigidbody2D>();
    }
    void update()
    {
      // check for input (spacebar or mouse click)
      if (input.Getkeydown(keycode.space) || input.GetMousebuttonDown(0))
      {
          jump();
      }
   }
   void jump()
   {
       // Apply an upward velocity to the bird 
       rb.velocity = vector2.up * jumpforce;
   }
   void oncollisionEnter2D(Collision2D Collision2d collison)
   {
        //handle collision with pipes or ground
        debug. log("Game Over");
        Time.timescale = 0; // stop the game 
   }
}
